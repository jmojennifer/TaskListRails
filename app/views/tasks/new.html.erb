<h2>New Task</h2>

<% if flash[:error] %>
  <p><%= flash[:error] %></p>
<% end %>

<%= form_for @task do |f| %>
  <p><%= f.label :name %>
  <%= f.text_field :name %></p>

  <p><%= f.label :description %>
  <%= f.text_field :description %></p>

  <p><%= f.label :completion_status, "Completion Status" %>
  <%= f.text_field :completion_status %></p>

  <p><%= f.label :completion_date, "Completion Date/Time -- if applicable (YYYY-MM-DD)" %>
  <%= f.text_field :completion_date %></p>

  <p><%= f.submit "Submit" %></p>
<% end %>
<li><%= button_to("Back", tasks_path, method: :get) %></li>
